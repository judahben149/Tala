CREATE TABLE users (
    id TEXT NOT NULL PRIMARY KEY,
    email TEXT NOT NULL,
    displayName TEXT,
    photoUrl TEXT,
    isEmailVerified INTEGER NOT NULL DEFAULT 0
);

-- Queries
getUserById:
SELECT * FROM users WHERE id = ?;

insertUser:
INSERT OR REPLACE INTO users(id, email, displayName, photoUrl, isEmailVerified)
VALUES (?, ?, ?, ?, ?);

deleteUser:
DELETE FROM users WHERE id = ?;

deleteAllUsers:
DELETE FROM users;

selectAll:
SELECT * FROM users;